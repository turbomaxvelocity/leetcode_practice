class Solution {
public:
    vector<int> intersection(vector<int>& nums1, vector<int>& nums2) {
        //step 1. put all elements from nums 1 into a hash set
        //removes duplicates automatically
        unordered_set<int> set1(nums1.begin(),nums1.end());
        //step 2. create another set to store intersection results
        unordered_set<int> resultSet;
        //step 3. loop through nums2
        for(int num : nums2){
            //check if the number is in set1
            //returns 1 if found
            if(set1.count(num)){
                //found match, add result to resultSet
                resultSet.insert(num);
            }
        }
        //step 4. convert set back to vector
        return vector<int>(resultSet.begin(),resultSet.end());
    }
};
